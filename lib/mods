<?
$tang=gmdate("d M Y",time()+($kord*3600));
$jam=gmdate("H:i",time()+($kord*3600));
$t=gmdate("Y",time()+($kord*3600));
$h=gmdate("z",time()+($kord*3600));
$jum=(($t-1)*365)
+(int)(($t-1)/4)+$h;
$di=7*(int)($jum/7);
$dn=$jum-$di;
$pas=5*(int)($jum/5);
$psr=$jum-$pas;
$dino=array("Sun","Mon","Tue","Wed","Thu","Fri","Sat");
$pasar=array("Pa","Po","Wa","Kl","Le");
$hp="$dino[$dn] $pasar[$psr]";
?>
